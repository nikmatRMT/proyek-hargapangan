{
  "cleanUrls": true,
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@latest",
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/", "destination": "/api/index.php?route=/health" },
    { "source": "/api", "destination": "/api/index.php?route=/api" },
    { "source": "/api/(.*)", "destination": "/api/index.php?route=/api/$1" }
  ]
}
