{
  "version": 2,
  "buildCommand": "npm --prefix web-admin install && npm --prefix web-admin run build",
  "installCommand": "npm --prefix harga-backend install && npm --prefix web-admin install",
  "outputDirectory": "web-admin/dist",
  "builds": [
    {
      "src": "harga-backend/src/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/m/(.*)",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/sse/(.*)",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/health",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "web-admin/dist/index.html"
    }
  ]
}
