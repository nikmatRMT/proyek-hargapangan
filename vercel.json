{
  "version": 2,
  "public": false,
  "buildCommand": "cd web-admin && npm install && npm run build",
  "outputDirectory": "web-admin/dist",
  "installCommand": "npm --prefix harga-backend install",
  "builds": [
    {
      "src": "harga-backend/src/server.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60,
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/m/(.*)",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/sse/(.*)",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/health.*",
      "dest": "harga-backend/src/server.js"
    },
    {
      "src": "/.*",
      "status": 200,
      "dest": "web-admin/dist/index.html"
    }
  ]
}
