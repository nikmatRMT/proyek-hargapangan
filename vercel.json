{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    { "source": "/auth/login", "destination": "/api/auth" },
    { "source": "/auth/me", "destination": "/api/auth" },
    { "source": "/auth/logout", "destination": "/api/auth" },
    { "source": "/api/auth/login", "destination": "/api/auth" },
    { "source": "/api/auth/me", "destination": "/api/auth" },
    { "source": "/api/auth/logout", "destination": "/api/auth" }
  ]
}
